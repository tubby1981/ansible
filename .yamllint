---
extends: default

rules:
  line-length:
    max: 160
    level: warning
  
  indentation:
    spaces: 2
    indent-sequences: true
  
  trailing-spaces: enable
  
  truthy:
    allowed-values: ['true', 'false']
    check-keys: false
  
  comments:
    min-spaces-from-content: 1
  
  comments-indentation: disable
  
  document-start: disable
  
  empty-lines:
    max: 2
  
  new-line-at-end-of-file: enable
  
  key-duplicates: enable
  
  brackets:
    min-spaces-inside: 0
    max-spaces-inside: 0
  
  braces:
    min-spaces-inside: 0
    max-spaces-inside: 1
  
  colons:
    max-spaces-before: 0
    max-spaces-after: 1

ignore: |
  .github/
  venv/
  .venv/
  molecule/
  tests/output/
  *.tar.gz
