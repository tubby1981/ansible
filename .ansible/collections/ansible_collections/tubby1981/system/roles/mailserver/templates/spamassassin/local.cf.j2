# SpamAssassin Local Configuration
# Generated by Ansible

# Score thresholds
required_score {{ mailserver_spamassassin_required_score }}
report_safe 0
rewrite_header Subject [SPAM]

# Bayesian filtering
use_bayes {{ mailserver_spamassassin_use_bayes | int }}
bayes_auto_learn {{ mailserver_spamassassin_bayes_auto_learn | int }}
bayes_auto_learn_threshold_nonspam 0.1
bayes_auto_learn_threshold_spam 12.0

# Network tests
skip_rbl_checks 0
use_razor2 1
use_pyzor 1

# DKIM
dkim_timeout 10

# Performance
lock_method flock

# Logging
add_header all Status _YESNO_, score=_SCORE_ required=_REQD_ tests=_TESTS_ autolearn=_AUTOLEARN_ version=_VERSION_

# Custom rules
score URIBL_BLOCKED 0
score RAZOR2_CHECK 0.00
