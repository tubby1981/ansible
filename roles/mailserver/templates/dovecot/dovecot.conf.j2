# Dovecot main configuration
# Generated by Ansible for {{ mailserver_hostname }}

# ====================================================================
# Configuration Versioning
# ====================================================================
# Note: The following are for internal tracking. 
# They are commented out because they are not valid Dovecot parameters.
dovecot_config_version = {{ mailserver_dovecot_config_base_version | default('1.0') }}
dovecot_storage_version = {{ mailserver_dovecot_config_base_version | default('1.0') }}

# ====================================================================
# Networking & Protocols
# ====================================================================
protocols = {{ mailserver_dovecot_protocols }}
listen = *, ::

# ====================================================================
# Includes
# ====================================================================
!include conf.d/*.conf
!include_try /usr/share/dovecot/protocols.d/*.protocol
